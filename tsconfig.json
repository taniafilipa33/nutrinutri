{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "app/javascript/*"
            ]
        },
        "outDir": "app/assets/builds"
    },
    "include": [
        "app/javascript/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "public"
    ]
}